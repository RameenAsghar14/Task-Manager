<!-- app/views/devise/registrations/new.html.erb -->
<div class="flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-sm bg-white shadow-md rounded-lg p-6">
    <h2 class="text-2xl font-bold text-center text-blue-600">Create an Account</h2>
    <p class="mt-2 text-center text-gray-600">Sign up to manage your tasks easily</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mt-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full mt-1 p-2 border border-gray-300 rounded-md" %>
      </div>

      <div class="mt-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full mt-1 p-2 border border-gray-300 rounded-md" %>
      </div>

      <div class="mt-4">
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full mt-1 p-2 border border-gray-300 rounded-md" %>
      </div>

      <div class="mt-6">
        <%= f.submit "Sign Up", class: "w-full py-2 px-4 bg-blue-600 text-white rounded-md hover:bg-blue-700 font-semibold" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <p class="text-sm text-gray-600">Already have an account? <%= link_to "Login", new_user_session_path, class: "text-blue-600 hover:text-blue-700" %></p>
    </div>
  </div>
</div>
