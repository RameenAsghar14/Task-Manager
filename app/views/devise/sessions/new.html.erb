<!-- app/views/devise/sessions/new.html.erb -->
<div class="flex items-center justify-center bg-gray-100">
  <!-- Reduced width from max-w-md to max-w-sm -->
  <div class=" max-w-sm bg-white shadow-md rounded-lg p-6">
    <h2 class="text-2xl font-bold text-center text-blue-600">Login to Your Account</h2>
    <p class="mt-2 text-center text-gray-600">Access your tasks and stay organized</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mt-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full mt-1 p-2 border border-gray-300 rounded-md" %>
      </div>

      <div class="mt-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full mt-1 p-2 border border-gray-300 rounded-md" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mt-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-sm text-gray-600" %>
        </div>
      <% end %>

      <div class="mt-6">
        <%= f.submit "Log In", class: "w-full py-2 px-4 bg-blue-600 text-white rounded-md hover:bg-blue-700 font-semibold" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <p class="text-sm text-gray-600">Don't have an account? <%= link_to "Sign Up", new_user_registration_path, class: "text-blue-600 hover:text-blue-700" %></p>
      <% if devise_mapping.recoverable? %>
        <p class="text-sm text-gray-600 mt-2"><%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-600 hover:text-blue-700" %></p>
      <% end %>
    </div>
  </div>
</div>
