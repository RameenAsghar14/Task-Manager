<% border_color = case task.status
                   when 'completed' then 'border-green-500'
                   when 'in_progress' then 'border-yellow-500'
                   else 'border-blue-500'
                 end %>
<div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 border-t-4 <%= border_color %>">
  <div class="flex items-center justify-between mb-2">
    <h3 class="text-xl font-semibold text-gray-800"><%= task.title %></h3>
    <% status_color = task.status == 'completed' ? 'bg-green-100 text-green-700' : (task.status == 'in_progress' ? 'bg-yellow-100 text-yellow-700' : 'bg-blue-100 text-blue-700') %>
    <span class="flex items-center gap-1 px-3 py-1 rounded-full text-xs font-bold tracking-wide <%= status_color %>">
      <%= task.status.humanize %>
    </span>
  </div>
  <p class="text-gray-600 text-sm mb-4"><%= task.description %></p>
  <div class="text-sm text-gray-500 mb-4">
    <p><strong>Created:</strong> <%= task.created_at.strftime("%B %d, %Y") %></p>
    <p><strong>Due Date:</strong> <%= task.due_date.strftime("%B %d, %Y") %></p>
  </div>
  <div class="flex items-center justify-between">
    <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-3 py-1 rounded-full">
      <%= task.category.name %>
    </span>
    <div class="flex items-center gap-4">
      <%= link_to "Edit", edit_task_path(task), class: "text-blue-500 hover:text-blue-700 font-semibold text-sm" %>
      <%= button_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?", turbo: true }, class: "text-red-500 hover:text-red-700 font-semibold text-sm" %>
    </div>
  </div>
</div>
