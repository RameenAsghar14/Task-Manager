<!-- Outer Wrapper with Background Color -->
<div class="min-h-screen bg-gray-100 p-8">
  <!-- Header -->
  <div class="container mx-auto text-center">
    <h1 class="text-4xl font-extrabold text-blue-700 mb-8">Task Manager</h1>
  </div>

  <!-- Filter Form -->
  <div class="container mx-auto bg-white p-6 rounded-lg shadow-lg mb-8 max-w-4xl">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Filter Tasks</h2>
    <%= form_with url: tasks_path, method: :get, local: true, class: "flex flex-wrap gap-4" do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search tasks...", class: "border border-gray-300 p-3 rounded-md w-full md:w-1/3" %>
      <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :name), prompt: "Select Category", class: "border border-gray-300 p-3 rounded-md w-full md:w-1/3" %>
      <%= date_field_tag :due_date, params[:due_date], class: "border border-gray-300 p-3 rounded-md w-full md:w-1/3" %>
      <%= submit_tag "Search", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold p-3 rounded-md w-full md:w-auto mt-4 md:mt-0" %>
    <% end %>
  </div>

<!-- Add a Create Task Button -->
<div class="container mx-auto max-w-6xl mb-6 flex justify-end">
  <%= link_to "Create Task", new_task_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded-md shadow-md" %>
</div>


  <!-- Task List -->
<div class="container mx-auto max-w-6xl">
  <h2 class="text-3xl font-bold text-gray-800 mb-4 text-center">Your Tasks</h2>

  <% if @tasks.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @tasks.each do |task| %>
        <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300">
          <h3 class="text-2xl font-bold text-blue-700 mb-2"><%= task.title %></h3>
          <p class="text-gray-700 mb-4"><%= task.description %></p>

          <div class="flex items-center justify-between mb-4">
            <span class="text-sm text-gray-500">Created: <%= task.created_at.strftime("%B %d, %Y") %></span>
            <span class="text-sm text-gray-500">Due: <%= task.due_date.strftime("%B %d, %Y") %></span>
            <span class="text-sm font-semibold <%= task.completed ? 'text-green-600' : 'text-red-600' %>">
              <%= task.completed ? "Completed" : "Pending" %>
            </span>
          </div>

          <div class="flex items-center justify-between">
            <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-3 py-1 rounded-full">
              <%= task.category.name %>
            </span>
            <button class="text-blue-500 hover:text-blue-700 font-semibold text-sm">Edit</button>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-gray-500 mt-8">No tasks found.</p>
  <% end %>
</div>

