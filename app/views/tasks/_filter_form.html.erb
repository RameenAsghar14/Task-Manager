<div class="container mx-auto bg-white p-6 rounded-lg shadow-lg border-2 border-blue-400 mb-8 max-w-4xl">
  <%= search_form_for @q, url: tasks_path, method: :get, class: "flex flex-wrap gap-4" do |f| %>
    <!-- Search Field -->
    <%= f.text_field :title_cont, placeholder: "Search tasks...", class: "border border-gray-300 p-3 rounded-md w-full md:w-1/3" %>
    
    <!-- Category Select Dropdown -->
    <%= f.collection_select :category_id_eq, @categories, :id, :name, { prompt: "Select Category" }, class: "border border-gray-300 p-3 rounded-md w-full md:w-1/3" %>
    
    <!-- Due Date Field -->
    <%= f.date_field :due_date_eq, placeholder: "Due Before", class: "border border-gray-300 p-3 rounded-md w-full md:w-1/3" %>
    
    <!-- Status Select Dropdown -->
    <%= f.select :status_eq, options_for_select(Task.statuses.keys.map { |status| [status.humanize, status] }), { prompt: "Select Status" }, class: "border border-gray-300 p-3 rounded-md w-full md:w-1/3" %>
    
    <!-- Search Button -->
    <%= f.submit "Search", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold p-3 rounded-md w-full md:w-auto mt-4 md:mt-0" %>

    <!-- Clear Search Button -->
   <%= link_to "Clear", tasks_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold p-3 rounded-md w-full md:w-auto mt-4 md:mt-0" %>
  <% end %>
</div>
